<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - TPXX - Apellido</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <script src="https://kit.fontawesome.com/998a118c10.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>
            <nav>
                <a href='@Url.Action("Index")'><img src="~/Imagenes/bandera.png" alt="Bandera Argentina"></a>
                <a href='@Url.Action("Elecciones")'>elecciones 2023</a>
                <a href='@Url.Action("Creditos")'>créditos</a>
            </nav>
        </header>
        <div>
            @RenderBody()
        </div>

        <footer>
                <p>&copy; @DateTime.Now.Year - Tiago Shebar - Elecciones2023</p>
        </footer>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
