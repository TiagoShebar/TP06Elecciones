<section class="info-candidato">
    <div>
        <h2>@ViewBag.Candidato.Nombre @ViewBag.Candidato.Apellido</h2>
        @if(ViewBag.Candidato.Foto == ViewBag.Candidato.Nombre.ToLower() + ViewBag.Candidato.Apellido + ".png" || @ViewBag.Candidato.Foto == ViewBag.Candidato.Nombre.ToLower() + ViewBag.Candidato.Apellido + ".jpg"){
                <img src="~/Imagenes/@ViewBag.Candidato.Foto">
            }
            else{
                <img src="@ViewBag.Candidato.Foto">
            }
    </div>
    <div class="rebajar">
        <p><b>Fecha de nacimiento:</b> @ViewBag.Candidato.FechaNacimiento.ToShortDateString()</p>
        <p><b>Postulaci√≥n:</b> @ViewBag.Candidato.Postulacion</p>
    </div>
</section>
<section class="arrow">
    <a href='@Url.Action("VerDetallePartido", new{idPartido=ViewBag.Candidato.IdPartido})'><i class="fa-solid fa-arrow-left"></i></a>
</section>